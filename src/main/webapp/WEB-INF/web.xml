<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>FlyAway</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
 
 
  <servlet>
  <servlet-name>AddingFlight</servlet-name>
  <servlet-class>com.flyaway.servlets.AddingFlight</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>ListAllFlights</servlet-name>
  <servlet-class>com.flyaway.servlets.ListAllFlights</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>Registration</servlet-name>
  <servlet-class>com.flyaway.servlets.Registration</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>PaymentProcessing</servlet-name>
  <servlet-class>com.flyaway.servlets.PaymentProcessing</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>SaveFlightRegistry</servlet-name>
  <servlet-class>com.flyaway.servlets.SaveFlightRegistry</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>SaveFlightRegistry</servlet-name>
  <url-pattern>/admin/flightRegister</url-pattern>
  </servlet-mapping>   
  <servlet-mapping>
  <servlet-name>PaymentProcessing</servlet-name>
  <url-pattern>/admin/payment</url-pattern>
  </servlet-mapping>   
  <servlet-mapping>
  <servlet-name>Registration</servlet-name>
  <url-pattern>/register</url-pattern>
  </servlet-mapping>    
  <servlet-mapping>
  <servlet-name>ListAllFlights</servlet-name>
  <url-pattern>/listall</url-pattern>
  </servlet-mapping>  
  <servlet-mapping>
  <servlet-name>AddingFlight</servlet-name>
  <url-pattern>/addf</url-pattern>
  </servlet-mapping>
  
</web-app>